[
  {
    "method": "post",
    "path": "/api/v1/products",
    "handler": "Products.createOne",
    "policies": {
      "inGroup": [
        "admin"
      ]
    },
    "body": {
      "name": "[name]",
      "price": "[price]",
      "keywords": "<keywords>",
      "short_desc": "[short_desc]",
      "long_desc": "[long_desc]"
    }
  },
  {
    "method": "get",
    "path": "/api/v1/products",
    "handler": "Products.getMultiple",
    "query": {
      "?index": {
        "$value": "[count]",
        "$default": 0
      },
      "?search": "[search_query]"
    }
  },
  {
    "method": "get",
    "path": "/api/v1/product/:product_id",
    "handler": "Products.getProduct"
  },
  {
    "method": "put",
    "path": "/api/v1/product/:product_id",
    "handler": "Products.updateOne",
    "policies": {
      "inGroup": [
        "admin"
      ]
    }
  },
  {
    "method": "delete",
    "path": "/api/v1/product/:product_id",
    "handler": "Products.deleteMultiple",
    "policies": {
      "inGroup": [
        "admin"
      ]
    }
  },
  {
    "method": "delete",
    "path": "/api/v1/products",
    "handler": "Products.deleteMultiple",
    "policies": {
      "inGroup": [
        "admin"
      ]
    }
  }
]