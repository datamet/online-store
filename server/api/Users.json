[
    {
        "method" : "post",
        "path" : "/api/v1/users",
        "handler" : "Users.createOne",
        "body" : {
            "username" : "[username]",
            "password" : "[password]",
            "?groups" : {
                "$default" : ["user"],
                "$value" : "<group>",
                "$policies" : { "inGroup" : ["admin"] }
            },
            "?email" : "[email]"
        }
    }
]