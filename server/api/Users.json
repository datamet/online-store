[
  {
    "method": "post",
    "path": "/api/v1/users",
    "handler": "Users.createOne",
    "body": {
      "username": "[username]",
      "password": "[password]",
      "?groups": {
        "$default": [
          "user"
        ],
        "$value": "<group>",
        "$policies": {
          "inGroup": [
            "admin"
          ]
        }
      },
      "?email": "[email]"
    }
  },
  {
    "method": "get",
    "path": "/api/v1/users",
    "handler": "Users.getMultiple"
  },
  {
    "method": "get",
    "path": "/api/v1/user/:userID",
    "handler": "Users.getOne"
  },
  {
    "method": "put",
    "path": "/api/v1/user/:userID",
    "handler": "Users.updateOne",
    "policies": {
      "inGroup": [
        "owner"
      ]
    },
    "body": {
      "?username": "[username]",
      "?password": "[password]",
      "?groups": {
        "$value": "<group>",
        "$policies": {
          "inGroup": [
            "admin"
          ]
        }
      },
      "?email": "[email]"
    }
  },
  {
    "method": "delete",
    "path": "/api/v1/users/:userID",
    "handler": "Users.deleteOne",
    "policies": {
      "inGroup": [
        "admin",
        "owner"
      ]
    }
  }
]