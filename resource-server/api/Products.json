[
    {
        "method": "post",
        "path": "/api/v1/products",
        "handler": "Products.createOne",
        "policies": {
            "inGroup": [
                "admin"
            ]
        },
        "body": {
            "name": "[name]",
            "price": "[price]",
            "stock": "[stock]",
            "keywords": "<keyword>",
            "short_desc": "[short_desc]",
            "long_desc": "[long_desc]"
        }
    },
    {
        "method": "get",
        "path": "/api/v1/products",
        "handler": "Products.getMultiple",
        "query": {
            "?index": {
                "$value": "[count]",
                "$default": 0
            },
            "?count": {
                "$value": "[amount]",
                "$default": 20
            },
            "?keywords": "<keyword>",
            "?search": "[search_query]"
        }
    },
    {
        "method": "get",
        "path": "/api/v1/product/:product_id",
        "handler": "Products.getOne"
    },
    {
        "method": "put",
        "path": "/api/v1/product/:product_id",
        "handler": "Products.updateOne",
        "policies": {
            "inGroup": [
                "admin"
            ]
        },
        "body": {
            "name": "[name]",
            "price": "[price]",
            "stock": "[stock]",
            "keywords": "<keyword>",
            "short_desc": "[short_desc]",
            "long_desc": "[long_desc]"
        }
    },
    {
        "method": "delete",
        "path": "/api/v1/product/:product_id",
        "handler": "Products.deleteOne",
        "policies": {
            "inGroup": [
                "admin"
            ]
        }
    }
]